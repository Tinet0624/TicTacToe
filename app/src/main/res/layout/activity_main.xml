<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EBD8"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtPlayerTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xPLayer"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <Button
        android:id="@+id/buttonNewGame"
        android:layout_width="350dp"
        android:layout_height="98dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="#E78F8E"
        android:onClick="newGameOnClick"
        android:text="@string/newGame"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlayerTurn"
        app:layout_constraintVertical_bias="0.032"
        tools:ignore="TextContrastCheck" />

    <TableLayout
        android:layout_width="344dp"
        android:layout_height="311dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/txtPlayerTurn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.028">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="163dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="115dp"
                android:layout_height="104dp"
                android:backgroundTint="#694F5D"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:textSize="60sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>